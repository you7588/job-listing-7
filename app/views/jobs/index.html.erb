<div class="pull-right">
  <%= link_to("排序", new_job_path, :class => "btn btn-default" ) %>
  <li> <%= link_to("按照薪资下限顺序", jobs_path(:order => "by_lower_bound")) %></li>
  <li> <%= link_to("按照薪资上限排序", jobs_path(:order => "by_upper_bound")) %></li>
  <li> <%= link_to("按照发表时间排序", jobs_path ) %> </li>
</div>
<div>
<ul class="dropdown-menu" aria-labelledby="dropdownMenuDivider">

</ul>
</div>

<table class="table table-boldered">
  <thead>
    <tr>
      <th> 职缺 </th>
      <th> 薪资下限 </th>
      <th> 薪资上限 </th>
      <th> 刊登时间 </th>
    </tr>
  </thead>


  <% @jobs.each do |job| %>
  <tr>
    <td>
      <%= link_to(job.title, job_path(job)) %>
    </td>
    <td> <%= job.wage_lower_bound %> </td>
    <td> <%= job.wage_upper_bound %> </td>
    <td>
      <%= job.created_at %>
    </td>
  </tr>
  <% end %>

</table>
